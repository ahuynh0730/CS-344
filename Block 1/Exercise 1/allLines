#!/bin/bash

totalLines=0 

#defining function before calling
allLines(){ 
    for file in ./* ; do 
		#if file is a directory
        if [[ -d "$file" ]]; then # file is a directory
			echo "$file is a directory"
		
		# if file is a file
        elif [[ -f "$file" ]]; then 
			
			#will not count lines in this file
			if [ "$file" == "./allLines" ]; then
				echo "$file will not be counted"
			else
				echo "$file is a file"
			fi
        fi
    done
}

allLines
echo "$totalLines" 